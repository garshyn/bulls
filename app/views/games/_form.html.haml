= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :state
    = f.number_field :state
  .field
    = f.label :join_code
    = f.text_field :join_code
  .actions
    = f.submit 'Save'
